#include <iostream>
using namespace std;

int main()
{
    int t,n;
    cin>>t;
    while(t--){
        cin>>n;
        int a[n];
        for(int i=0;i<n;i++){
            cin>>a[i];
        }
        int min=a[0],i,res=0;
        for(i=0;i<n;i++){
            if(a[i]<min){
                min=a[i];
                res=i;
            }
        }
        cout<<res<<endl;
    }
}
